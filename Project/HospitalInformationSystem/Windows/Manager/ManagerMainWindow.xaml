<Window x:Class="HospitalInformationSystem.Windows.Manager.ManagerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ucRooms="clr-namespace:HospitalInformationSystem.Windows"
        xmlns:ucStaticEquipment="clr-namespace:HospitalInformationSystem.Windows.Manager"
        xmlns:ucDynamicEquipment="clr-namespace:HospitalInformationSystem.Windows.Manager"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows.Manager"
        mc:Ignorable="d"
        Title="Glavni prozor" Height="600" Width="1000" Closing="Window_Closing">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Fajl">
                    <MenuItem x:Name="newMenuItem" Header="_Novi" InputGestureText="CTRL+N" Click="newMenuItem_Click"/>
                    <Separator />
                    <MenuItem Header="_Odjavi se" InputGestureText="CTRL+O"/>
                    <MenuItem x:Name="exitMenuItem" Header="_Izađi" Click="exitMenuItem_Click" InputGestureText="CTRL+C"/>
                </MenuItem>
                <MenuItem Header="_Izmena">
                    <MenuItem Header="_Izmeni" InputGestureText="CTRL+E"/>
                    <Separator />
                    <MenuItem Header="_Obriši" InputGestureText="CTRL+D"/>
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />

            <TabControl x:Name="mainTabs" SelectionChanged="mainTabs_SelectionChanged">
                <TabItem x:Name="roomTab" Header="Prostorije">
                    <ucRooms:RoomCRUDOperationsWindow x:Name="roomsTable"/>
                </TabItem>
                <TabItem x:Name="equipmentTab" Header="Oprema">
                    <TabControl x:Name="staticDynamicTab" SelectionChanged="staticDynamicTab_SelectionChanged">
                        <TabItem x:Name="staticEquipmentTab" Header="Statička">
                            <ucStaticEquipment:EquipmentTable x:Name="equipmentTable"/>
                        </TabItem>
                        <TabItem x:Name="dynamicEquipmentTab" Header="Dinamička">
                            <ucDynamicEquipment:DynamicEquipmentTable x:Name="dynamicEquipmentTable"/>
                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
           
        </DockPanel>

    </Grid>
</Window>
