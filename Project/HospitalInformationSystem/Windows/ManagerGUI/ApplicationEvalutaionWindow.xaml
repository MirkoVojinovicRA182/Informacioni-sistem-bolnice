<Window x:Class="HospitalInformationSystem.Windows.ManagerGUI.ApplicationEvalutaionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows.ManagerGUI"
        mc:Ignorable="d"
        Title="Ocenjivanje aplikacije" Height="410" Width="400" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label Name="managerName" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="0" Content="UPRAVNIK" FontSize="12"/>
        <TextBox Name="evaluationTextBox" Grid.Row="1" Background="LightGray" FontSize="15" TextWrapping="Wrap"/>
        <Button Grid.Row="2" Name="confirmButton" Content="POTVRDI" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Center"  Height="30" Click="confirmButton_Click" FontSize="15"/>
    </Grid>
</Window>
