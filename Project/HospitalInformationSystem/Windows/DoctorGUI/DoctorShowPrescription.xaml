<Window x:Class="HospitalInformationSystem.Windows.DoctorGUI.DoctorShowPrescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows"
        mc:Ignorable="d"
        Title="DoctorShowPrescription" Height="450" Width="350">
    <Grid>
        <Label Content="Lek:" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Datum početka:" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Datum završetka:" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Doza i dodatne informacije:" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="endDateTextBox" HorizontalAlignment="Left" Height="35" Margin="156,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" FontSize="18" IsEnabled="False"/>
        <TextBox x:Name="startDateTextBox" HorizontalAlignment="Left" Height="35" Margin="156,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" FontSize="18" IsEnabled="False"/>
        <TextBox x:Name="infoTextBox" HorizontalAlignment="Left" Height="161" Margin="10,259,0,0" TextWrapping="Wrap" Text="Informacije o dozi leka i sve ostale dodatne informacije o terapiji." VerticalAlignment="Top" Width="324" FontSize="18" IsEnabled="False"/>
        <ComboBox x:Name="medicineComboBox" HorizontalAlignment="Left" Margin="156,103,0,0" VerticalAlignment="Top" Width="178" FontSize="16" SelectionChanged="medicineComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                 <Run Text="{Binding medicine}" />
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Window>
