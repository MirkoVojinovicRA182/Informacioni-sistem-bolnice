<Window x:Class="HospitalInformationSystem.Windows.NewRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows"
        mc:Ignorable="d"
        Title="Unos nove prostorije" Height="350" Width="300" Closing="Window_Closing">
    <Grid Margin="0,0,-0.4,0.4">
        <Label Content="Šifra:" HorizontalAlignment="Left" Margin="35,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Naziv:" HorizontalAlignment="Left" Margin="35,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Tip:" HorizontalAlignment="Left" Margin="35,130,0,0" VerticalAlignment="Top"/>
        <Label Content="Sprat:" HorizontalAlignment="Left" Margin="35,188,0,0" VerticalAlignment="Top"/>
        <Button x:Name="confirmButton" Content="POTVRDI" HorizontalAlignment="Left" Margin="71,268,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="confirmButton_Click"/>
        <ComboBox x:Name="typeOfRoomComboBox" HorizontalAlignment="Left" Margin="91,133,0,0" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="idTextBox" HorizontalAlignment="Left" Height="23" Margin="90,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="90,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="floorTextBox" HorizontalAlignment="Left" Height="23" Margin="90,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45"/>
        <Button x:Name="closeButton" Content="IZAĐI" HorizontalAlignment="Left" Margin="168,268,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="closeButton_Click"/>

    </Grid>
</Window>
