<Window x:Class="HospitalInformationSystem.Windows.SecretaryGUI.NewsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows.SecretaryGUI"
        mc:Ignorable="d"
        Title="News" Height="450" Width="800">
    <Grid>
        <Button x:Name="addBtn" Content="Dodaj" HorizontalAlignment="Left" Margin="334,372,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.306,0.465" Click="AddBtn_Click"/>
        <Button x:Name="editBtn" Content="Izmeni" HorizontalAlignment="Left" Margin="489,372,0,0" VerticalAlignment="Top" Width="75" Click="EditBtn_Click"/>
        <Button x:Name="deleteBtn" Content="Obrisi" HorizontalAlignment="Left" Margin="641,372,0,0" VerticalAlignment="Top" Width="75" Click="DeleteBtn_Click"/>
        <ListView x:Name="announcementsList" HorizontalAlignment="Left" Height="321" Margin="294,25,0,0" VerticalAlignment="Top" Width="471">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Text}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>

    </Grid>
</Window>
