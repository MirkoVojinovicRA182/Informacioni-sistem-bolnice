<Window x:Class="HospitalInformationSystem.Windows.DoctorGUI.ShowPatientInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows"
        mc:Ignorable="d"
        Title="ShowPatientInformationWindow" Height="420" Width="350" KeyDown="Window_KeyDown" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="hospitalBackground2.jpg"/>
        </Grid.Background>
        <Label Content="Pacijent:" HorizontalAlignment="Left" Margin="121,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="nameLabel" Content="Ime i prezime" HorizontalAlignment="Left" Margin="201,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="JMBG:" HorizontalAlignment="Left" Margin="121,44,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="jmbgLabel" Content="JMBG" HorizontalAlignment="Left" Margin="201,44,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Source="patientsIcon.jpg"/>
        <Image HorizontalAlignment="Left" Height="70" Margin="10,124,0,0" VerticalAlignment="Top" Width="70" Source="medicalRecordIcon.png"/>
        <Label Content="Pregled zdravstvenog&#xD;&#xA;kartona pacijenta" HorizontalAlignment="Left" Height="67" Margin="120,127,0,0" VerticalAlignment="Top" Width="197" FontSize="18"/>
        <Label Content="CTRL+Z" HorizontalAlignment="Left" Margin="16,194,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="40" Margin="282,320,0,0" VerticalAlignment="Top" Width="40" Source="exitIcon.png"/>
        <Label Content="ESC" HorizontalAlignment="Left" Margin="287,358,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="70" Margin="10,233,0,0" VerticalAlignment="Top" Width="70" Source="hospitalTretmentIcon.png" Stretch="UniformToFill"/>
        <Label Content="Slanje pacijenta na&#xD;&#xA;bolnicko lecenje" HorizontalAlignment="Left" Height="67" Margin="120,236,0,0" VerticalAlignment="Top" Width="197" FontSize="18"/>
        <Label Content="CTRL+T" HorizontalAlignment="Left" Margin="18,300,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
