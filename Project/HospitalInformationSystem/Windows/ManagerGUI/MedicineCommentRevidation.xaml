<mah:MetroWindow x:Class="HospitalInformationSystem.Windows.ManagerGUI.MedicineCommentRevidation"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows.ManagerGUI"
        mc:Ignorable="d"
        Title="Revidiranje komentara" Height="280" Width="300" Closing="Window_Closing">
    <Grid>
        <RichTextBox x:Name="commentRichTextBox" BorderThickness="1" HorizontalAlignment="Left" Height="159" Margin="10,10,0,0" VerticalAlignment="Top" Width="274"/>
        <Button x:Name="acceptCommentButton" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="84,188,0,0" Click="acceptCommentButton_Click"/>
        <Button x:Name="declineCommentButton" Content="ODBIJ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="150,188,0,0" Click="declineCommentButton_Click"/>

    </Grid>
</mah:MetroWindow>
