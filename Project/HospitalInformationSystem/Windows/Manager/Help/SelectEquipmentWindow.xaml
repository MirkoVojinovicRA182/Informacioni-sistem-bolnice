<Window x:Class="HospitalInformationSystem.Windows.Manager.Help.SelectEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalInformationSystem.Windows.Manager.Help"
        mc:Ignorable="d"
        Title="Izaberite opremu" Height="200" Width="400" Closing="Window_Closing">
    <Grid>
        <ComboBox x:Name="equipmentComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="221" Margin="95,45,0,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                 <Run Text="{Binding Name}" />
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="confirmButton" Content="POTVRDI" Margin="160,110,158.6,10.4" Click="confirmButton_Click"/>

    </Grid>
</Window>
