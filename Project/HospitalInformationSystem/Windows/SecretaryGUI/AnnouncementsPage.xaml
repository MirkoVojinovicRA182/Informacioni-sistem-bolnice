<Page x:Class="HospitalInformationSystem.Windows.SecretaryGUI.AnnouncementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalInformationSystem.Windows.SecretaryGUI"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="797"
      Title="AnnouncementsPage">

    <Grid>
        <Button x:Name="addBtn" Content="Dodaj" HorizontalAlignment="Left" Margin="168,679,0,0" VerticalAlignment="Top" Width="78" Height="32"/>
        <Button x:Name="editBtn" Content="Izmeni" HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Margin="381,679,0,0" Height="32"/>
        <Button x:Name="deleteBtn" Content="Obrisi" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="569,679,0,0" Height="32"/>
        <ListView x:Name="announcementsList" HorizontalAlignment="Left" Height="605" Margin="42,25,0,0" VerticalAlignment="Top" Width="723">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
